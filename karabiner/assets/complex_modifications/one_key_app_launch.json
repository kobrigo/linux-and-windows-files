{
  "title": "allow apps to be activated with one key press.",
  "maintainers": [
    "Eyal Kobrigo"
  ],
  "rules": [
    {
      "description": "Make the Chrome show up when pressing Command + Ctrl + g",
      "manipulators": [
      {
          "type": "basic",
          "from": {
              "key_code": "g",
              "modifiers": {
                  "mandatory": [
                      "command",
                      "control"
                  ],
                  "optional": [
                      "caps_lock"
                  ]
              }
          },
          "to": [
              {
                  "shell_command": "open -a 'Google Chrome.app'"
              }
          ]
      }]
    },{
      "description": "Make the Webstorm show up when pressing Command + Ctrl + w",
      "manipulators": [
      {
          "type": "basic",
          "from": {
              "key_code": "w",
              "modifiers": {
