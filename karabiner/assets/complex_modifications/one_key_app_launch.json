{
  "title": "allow apps to be activated with one key press.",
  "maintainers": [
    "Eyal Kobrigo"
  ],
  "rules": [
    {
      "description": "Make the Asana app (exported from chrome) to show up when pressing Command + Ctrl + a",
      "manipulators": [
      {
          "type": "basic",
          "from": {
              "key_code": "a",
              "modifiers": {
                  "mandatory": [
                      "command",
                      "control"
                  ],
                  "optional": [
                      "caps_lock"
                  ]
              }
          },
          "to": [
              {
                  "shell_command": "open -a 'My tasks - Asana'"
              }
          ]
      }]
    },{
